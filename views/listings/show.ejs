<% layout("/layouts/boilerplate") %>
<style>
    body {
        overflow: hidden; /* Hide both vertical and horizontal scrollbars */
    }
</style>
<div class="cont"  >
<div class="container-fluid">
<div class="row">
    <div class="col-8 offset-1 mt-1">
    <h1 style="margin-left: 7rem; font-weight: 500;">Listing Details :</h1>
    <div class="card col-6 offset-1">
    <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
        <p class="card-text">  <%= listing.title %>.</p>
    </div>
    </div>
    </div>

   <div style="margin: 3rem; font-weight: 700;"> 
    <ul>
        <li>
            <%= listing.title %>
        </li>
        <li>
            <%= listing.description %>
        </li>
        <li>
            &#8377;<%= listing.price.toLocaleString("en-IN") %>
        </li>
        <li>
            <%= listing.location %>
        </li>
        <li>
            <%= listing.country %>
        </li>
    </ul><br>
    <a href="/listings/<%= listing._id %>/edit">Edit This Listing</a><br><br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="add-btn">Delete Listing</button>
    </form>       

</div>
</div>
</div></div>