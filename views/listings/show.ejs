<% layout("/layouts/boilerplate") %>
    <style>
        body {
            overflow: hidden;
            /* Hide both vertical and horizontal scrollbars */
        }
    </style>
    <div class="cont" style="margin-left: 3rem;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-8 offset-3 mt-5 show-card">
                    <h1  class="mt-5" style="margin-left: 7rem; font-weight: 500;">Listing Details :</h1>
                    <div class="card col-6 offset-1">
                        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b><br>
                                <%= listing.title %> <br>
                                    &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                                        <%= listing.location %> <br>
                                            <%= listing.country %> <br>



                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
                    <div class="btns" style="margin-left: 23.4rem;" >
                        <a href="/listings/<%= listing._id %>/edit" class="btn add-btn col-1  offset-2 ">Edit</a>
                        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                            <button class="add-btn btn offset-5">Delete</button>
                        </form>
                    </div> 